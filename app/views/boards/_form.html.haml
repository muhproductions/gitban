= form_for(board) do |f|
  - if board.errors.any?
    #error_explanation
      %h2
        = pluralize(board.errors.count, "error")
        prohibited this board from being saved:
      %ul
        - board.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit class: :btn
